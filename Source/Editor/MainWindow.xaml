<Window x:Class="Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor"
        xmlns:converters="clr-namespace:Editor.Converters"
        mc:Ignorable="d"
        Title="log4net Configuration Editor" 
        MinHeight="350" 
        Height="400"
        MinWidth="328"
        Width="400">
    <Window.Resources>
        <converters:ObjectTypeNameToStringConverter x:Key="otntsc"/>
        
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="50"/>
        </Style>
    </Window.Resources>
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Center">
            <TextBox Width="200" VerticalAlignment="Center" IsReadOnly="True"></TextBox>
            <Button Click="OpenOnClick">Open</Button>
            <Button>Reload</Button>
        </StackPanel>

        <StackPanel DockPanel.Dock="Right">
            <StackPanel.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                    <Setter Property="Width" Value="100"/>
                </Style>
            </StackPanel.Resources>
            <Button>Add Appender</Button>
            <Button>Add Logger</Button>
            <Button>Add Renderer</Button>
            <Button>Add Root</Button>
        </StackPanel>

        <StackPanel DockPanel.Dock="Bottom">
            <Button>Save</Button>
        </StackPanel>
        <!--<ListBox x:Name="xChildren">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <CheckBox ToolTip="Enabled" VerticalAlignment="Center"></CheckBox>
                        <Label Content="{Binding Mode=Default, Converter={StaticResource otntsc}}"></Label>
                        <Label Content="{Binding Name}"></Label>
                        <Button>Edit</Button>
                        <Button>Remove</Button>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>-->
        <DataGrid x:Name="xChildren" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Enabled"/>
                <DataGridTextColumn Header="Element" Binding="{Binding Mode=Default, Converter={StaticResource otntsc}}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTemplateColumn Header="Options">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button>Edit</Button>
                                <Button>Remove</Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
